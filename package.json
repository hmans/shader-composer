{
  "name": "shader-composer-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Hendrik Mans <hendrik@mans.de>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 90
  },
  "scripts": {
    "build": "preconstruct build",
    "clean:vite": "rimraf **/node_modules/.vite",
    "dev": "pnpm examples",
    "examples": "pnpm clean:vite && preconstruct dev && cd apps/examples/ && pnpm dev",
    "postinstall": "preconstruct dev && manypkg check",
    "test": "jest --passWithNoTests",
    "ci": "preconstruct validate && manypkg check && pnpm build && pnpm test",
    "release": "pnpm ci && pnpm changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.24.3",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "rimraf": "^3.0.2",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.3"
  },
  "stackblitz": {
    "startCommand": "cd apps/examples && pnpm dev"
  }
}
